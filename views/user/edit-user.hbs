<title>Edit / {{username}}</title>

{{! cuando mando archvios es necesario agregar la propiedad enctype="multipart" }}

<form action="/user/edit-user" method="post" enctype="multipart/form-data">
  <label for="">First Name</label>
  <input type="text" name="first_name" placeholder="{{first_name}}" value="{{first_name}}"/>

  <label for="">Username</label>
  <input type="text" name="username" placeholder="{{username}}" value="{{username}}" readonly/>

  <label for="">Email</label>
  <input type="text" name="email" placeholder="{{email}}" value="{{email}}" readonly/>

  <label for="">Profile Pic</label>
  <input type="file" name="profile_pic" placeholder="{{profile_pic}}"/>
  <button type="submit">Send</button>
</form>